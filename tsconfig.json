{
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "allowJs": true,
      "strictNullChecks": false,
      "baseUrl": ".",
      "paths": {
        "$/*": ["./src/*"]
      }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register", "dotenv/config"]
  },
  "include": ["tsconfig.json", "**/*.ts"],
  "exclude": ["node_modules"]
}